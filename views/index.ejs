<!DOCTYPE html>
<%- include ('partials/_head') %>
<body>
    <h1><%= title  %></h1>
<%- include ('partials/_nav') %>

    

    <section>
        <h2>Blog Posts</h2>
        <div>
            <% let ctr=0;
                blogposts.forEach(post => { %>
               <article>
                    <h3><%=ctr %><%= post.title %></h3>
                    <p><strong>Author:</strong> <%= post.author %></p>
                    <p><%= post.body %> <a href="/posts/<%= post.id %>">Read more...</a></p>
                </article>
            <% ctr++; }); %>
          <% if(typeof somevars == "undefined") { %>
                <p>No data</p>  <% } else { %>
            <%= somevars %>
            <% } %>
        </div>
    </section>
<%- include ('partials/_footer') %>
</body>
</html>